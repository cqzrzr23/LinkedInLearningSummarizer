# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# File Paths
SUMMARY_INSTRUCTION_PATH=./prompts/summary_instruction.md
REVIEW_INSTRUCTION_PATH=./prompts/review_instruction.md
OUTPUT_TRANSCRIPT_DIR=./output

# Browser Settings
HEADLESS=true
SESSION_PROFILE=linkedin_session

# Processing Settings
KEEP_TIMESTAMPS=false
MAX_SCROLL_ROUNDS=10
SINGLE_PASS_THRESHOLD=5000

# Workflow Control
ENABLE_SCRAPING=true
ENABLE_AI_PROCESSING=true

# AI Processing
GENERATE_COURSE_SUMMARY=true
GENERATE_LESSON_SUMMARIES=false
GENERATE_REVIEW=true
MAP_CHUNK_SIZE=350000
MAP_CHUNK_OVERLAP=200

# HTML Generation
GENERATE_HTML=true    # Generate HTML files alongside Markdown (true/false)
HTML_THEME=light      # HTML styling theme (light/dark/auto)